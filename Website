  <script>
    // Basic JS: populate next jumu'ah (calculate next Friday)
    function nextFridayDateString(){
      const today = new Date();
      const day = today.getDay(); // 0 Sun .. 5 Fri .. 6 Sat
      const daysUntilFriday = (5 - day + 7) % 7 || 7; // next Friday — if today is Friday show next Friday (change to 0 if want today)
      const next = new Date(today.getTime() + daysUntilFriday * 24*60*60*1000);
      const opts = {weekday:'long', month:'long', day:'numeric', year:'numeric'};
      return next.toLocaleDateString(undefined, opts);
    }
    document.getElementById('next-jumuah-date').textContent = nextFridayDateString();
    document.getElementById('year').textContent = new Date().getFullYear();

    // populate events list
    const events = [
      {title:'Jumu\'ah Prayer', when: nextFridayDateString(), where: 'Main hall'},
      {title:'Quran Study (Tues.)', when: 'Tuesdays • 7:00 PM', where: 'Community Room'},
      {title:'Youth Program', when: 'Saturdays • 4:00 PM', where: 'Youth Center'},
    ];
    const el = document.getElementById('events-list');
    events.forEach(e=>{
      const li = document.createElement('li');
      li.textContent = `${e.title} — ${e.when} (${e.where})`;
      el.appendChild(li);
    });

    // small form handler (client-only): open mailto with form data
    const form = document.getElementById('join-form');
    const msg = document.getElementById('form-msg');
    form.addEventListener('submit', function(ev){
      ev.preventDefault();
      const name = document.getElementById('name').value.trim();
      const email = document.getElementById('email').value.trim();
      if(!name || !email){
        msg.style.display='block'; msg.textContent='Please provide name and email.'; return;
      }
      const phone = document.getElementById('phone').value.trim();
      const interest = document.getElementById('interest').value;
      const notes = document.getElementById('notes').value.trim();

      const subject = encodeURIComponent('Membership request — ' + name);
      const body = encodeURIComponent(
        `Name: ${name}\nEmail: ${email}\nPhone: ${phone}\nInterest: ${interest}\nNotes: ${notes}\n\nSent from website.`
      );
      // use mailto for now
      window.location.href = `mailto:info@example.org?subject=${subject}&body=${body}`;
      msg.style.display='block'; msg.textContent='Opening email client...';
    });

    // PDF download placeholder: opens example membership PDF link (replace with real file)
    document.getElementById('download-pdf').addEventListener('click', () => {
      // replace href with your real PDF when available
      const pdfUrl = 'membership-form.pdf';
      // If file isn't found, browser will 404 — replace with hosted file or generate server-side.
      window.open(pdfUrl, '_blank');
    });

    // Accessibility: skip to main (if you add skip link later)
  </script>
